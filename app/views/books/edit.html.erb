<div class="row">
  <div class="col-xs-12">
    <h1>Edit Book</h1>

    <%= form_for @book do |f| %>
      Title: <%= f.text_field :title %><br />
      Author First Name: <%= f.text_field :author_first %><br />
      Author Last Name: <%= f.text_field :author_last %><br />
      Flag: <%= f.check_box :flag %><br />
      <%= f.submit %>
    <% end %>

    <%= link_to 'Books', books_path %>
  </div>
</div>
